    @section scripts{
        <script src="@Url.Content("~/Scripts/jquery.ui.widget.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.iframe-transport.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/select2.min.js")" type="text/javascript"></script>
        <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC2df9i_A809q2eQQizBb7UqSGXASsQHVQ&libraries=places"></script>
        <script src="@Url.Content("~/Scripts/jquery-ui.min.js")" type="text/javascript"></script>
        <link href="@Url.Content("~/Content/jquery-ui.css")" rel="stylesheet" />
        <script type="text/javascript">



            google.maps.event.addDomListener(window, 'load', function () {
                var options = {
                    componentRestrictions: { country: "ng" }
                };
                var places = new google.maps.places.Autocomplete(document.getElementById('Facaddress'), options);
                google.maps.event.addListener(places, 'place_changed', function () {
                    var place = places.getPlace();
                    var address = place.formatted_address;
                    var latitude = place.geometry.location.lat();
                    var longitude = place.geometry.location.lng();
                    var mesg = "Location Address Is : " + address;
                    mesg += "\nLocation Latitude Is : " + latitude;
                    mesg += "\nLocation Longitude Is: " + longitude;
                    showMap(address, latitude, longitude);
                });
            });


            function showMap(locationaddress, latitude, longitude) {
                var markers = [];

                $("#modalMapDialog").dialog({
                    modal: true,
                    title: "Address Location on Map",
                    width: 550,
                    hright: 400,
                    buttons: {
                        Close: function () {
                            $(this).dialog('close');
                        },
                        Okay: function () {
                            $("#Gps").val(latitude + ',' + longitude);
                            $(this).dialog('close');
                        }
                    },
                    open: function () {

                        google.maps.visualRefresh = true;
                        var myCenter = new google.maps.LatLng(latitude, longitude);
                        var mapCanvas = document.getElementById("MapContainer");
                        var mapOptions = {
                            center: myCenter,
                            zoom: 14,
                            mapTypeId: google.maps.MapTypeId.ROADMAP,
                            panControl: true,
                            zoomControl: true,
                            mapTypeControl: true,
                            scaleControl: true,
                            streetViewControl: true,
                            overviewMapControl: true,
                            rotateControl: true,
                            zoomControl: true,
                            zoomControlOptions: {
                                style: google.maps.ZoomControlStyle.SMALL
                            },
                            mapTypeControl: true,
                            mapTypeControlOptions: {
                                style: google.maps.MapTypeControlStyle.DROPDOWN_MENU,
                                position: google.maps.ControlPosition.TOP_CENTER,
                                mapTypeIds: [
                                    google.maps.MapTypeId.ROADMAP,
                                    google.maps.MapTypeId.TERRAIN,
                                    google.maps.MapTypeId.SATELLITE,
                                    google.maps.MapTypeId.HYBRID
                                ]
                            }
                        };

                        var map = new google.maps.Map(mapCanvas, mapOptions);
                        var marker = new google.maps.Marker({ position: myCenter, animation: google.maps.Animation.BOUNCE });
                        marker.setMap(map);

                        var infowindow = new google.maps.InfoWindow({
                            content: locationaddress
                        });
                        infowindow.open(map, marker);

                        // Zoom to 9 when clicking on marker
                        google.maps.event.addListener(marker, 'click', function () {
                            map.setZoom(13);
                            map.setCenter(marker.getPosition());
                        });
                    }
                });
            }


            $(function () {




                $("#facupdaterecord").click(function () {

                    var msg = confirm("Are you sure you want to update this record?");
                    $(".updaterecordmodal").modal("hide");
                    debugger;
                    var CompanyName = $("#CompanyName").val();
                    var ApplicationID = $("#ApplicationId").val();
                    var CompanyEmail = $("#CompanyEmail").val();
                    var FacilityName = $("#FacilityName").val();
                    var FacilityId = $("#FacilityId").val();
                    var GPS = $("#Gps").val();
                    var FacilityAddress = $("#Facaddress").val();
                    var FacilitylocationId = $("#stafflocationid").val();
                    var CurrentStageId = $("#currentstageid").val();
                    var LastAssignedUser = $("#currentassigneduser").val();

                    var Tanks = [];

                    var TankName = document.getElementsByName('txtTankName[]');
                    var TankCapacity = document.getElementsByName('txtTankCapacity[]');
                    var TankId = document.getElementsByName('txtTankId[]');

                    for (var i = 0; i < TankName.length; i++) {
                        debugger;

                        var tks = TankId[i] == "" || TankId[i] == null ? 0 : TankId[i].value.trim();


                        Tanks.push({

                            "Capacity": TankCapacity[i].value.trim(),
                            "TankName": TankName[i].value.trim().toUpperCase(),
                            "TankId": tks,
                        });

                    }


                    if (msg === true) {
                    $(".loadingImage").show('fast');
                        $.post("/Admin/UpdateFacilityRecord", { "facilitylocationId": FacilitylocationId, currentStageId: CurrentStageId, "lastAssignedUser": LastAssignedUser, "ApplicationId": ApplicationID, "Companyemail": CompanyEmail, "Companyname": CompanyName, "Facilityname": FacilityName, Facilityid: FacilityId, "FacAddress": FacilityAddress, "Gps": GPS, "MyTanks": Tanks }, function (res) {
                        if (res === "success") {
                            alert("Update was successful");


                            $(".updaterecordmodal").modal("hide");
                            history.go(0);
                            $(".loadingImage").hide('fast');
                        }
                        else {
                            alert("Something went wrong");
                            $(".loadingImage").hide('fast');
                        }
                    });
                    $(".loadingImage").hide('fast');
                    }
                    else {
                        return false;
                    }

                });

                $("#mytable").dataTable({
                    "aLengthMenu": [10, 25, 50, 75, 100, 200],
                    'iDisplayLength': 10,
                    columnDefs: [{ orderable: false, "targets": [0, -1] }],
                    "language": {
                        "lengthMenu": "Display  _MENU_ records",
                        "zeroRecords": "No record found",
                        "info": "Showing page _PAGE_ of _PAGES_",
                        "infoEmpty": "No Record to Display Currently",
                        "infoFiltered": "(filtered from _MAX_ total records)"
                    },
                    "order": [[1, "desc"]]
                });
            });
            function FacilityJs(ApplicationID, CompanyEmail, CompanyName, FacilityName, FacilityId, Appcodetype, FacAddress, GPSCordinates, FacilitylocationId, CurrentStageId, LastAssignedUser) {
                debugger;
                $(".loadingImage").show('fast');
                var html = "";
                $("#CompanyName").val(CompanyName);
                $("#ApplicationId").val(ApplicationID);
                $("#CompanyEmail").val(CompanyEmail);
                $("#FacilityName").val(FacilityName);
                $("#FacilityId").val(FacilityId);
                $("#Facaddress").val(FacAddress);
                $("#Gps").val(GPSCordinates);
                $("#stafflocationid").val(FacilitylocationId);
                $("#currentstageid").val(CurrentStageId);
                $("#currentassigneduser").val(LastAssignedUser);
                if (Appcodetype === "SUI" || Appcodetype === "PT") {
                    $("#hidetanktable").hide('fast');
                } else {
                    $("#hidetanktable").show('fast');
                }


                $.post("/Admin/GetTanks", { "Facilityid": FacilityId }, function (res) {
                    debugger;
                    if (res.data === "success" && res.FacTank.length !== 0) {

                        $.each(res.FacTank, function (keys, vals) {

                            html += "<tr id='RemoveExistTank" + vals.TankId + "'><td><input class='form-control' name='txtTankName[]'  value='" + vals.TankName + "' > </input></td> <td><input class='form-control' name='txtTankCapacity[]' value='" + vals.Capacity + "'></input></td><td style='display:none'><input class='form-control' type='hidden' name='txtTankId[]' value='" + vals.TankId + "'></input></td><td><button class='btn btn-danger btn-xs' onclick='RemoveMyTanks(" + vals.TankId + ");'> <span class='glyphicon glyphicon-trash'> </span>  Delete</button> </td></tr>";
                        });
                        $(".AppendTanks").show('fast');
                        $(".AppendTanks").html(html);
                        $(".loadingImage").hide('fast');

                    } else {
                        $(".AppendTanks").hide('fast');
                        console.log("No tank was configured for facility with the reference number " + ApplicationID);
                        $(".loadingImage").hide('fast');
                    }

                });
                $(".updaterecordmodal").modal('show');
            };



            var Tanks_i = 1;

            function AddTanks() {
                $(".AppendTanks").show('fast');
                debugger
                Tanks_i++;

                var html = "<tr id='Remove" + Tanks_i + "'>  <td> <input type='text' required class='form-control' id='txtTankName[]' name='txtTankName[]' /> </td>";
                html += "<td> <input type='number' class='form-control' placeholder='KG'  id='txtTankCapacity[]'required name='txtTankCapacity[]' /> </td>";
                html += " <td> <button class='btn btn-danger btn-xs' onclick='RemoveTank();'> <span class='glyphicon glyphicon-trash'> </span>  Delete</button> </td> </tr>";
                $(".AppendTanks tr:last").after(html);
            }
            function RemoveTank() {
                $("#Remove" + Tanks_i).remove();
                Tanks_i--;
            }



            function RemoveMyTanks(removeid) {
                debugger;
                $("#RemoveExistTank" + removeid).remove();
            }

        </script>
    }
