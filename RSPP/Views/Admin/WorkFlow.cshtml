@model List<LPGRetailerLicense.DbEntities.WorkFlowNavigation>
   
    @{
        ViewBag.Title = "WorkFlow";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }

    <div class="content">



        @using(Html.BeginForm("AddWorkFlowRecord", "Admin", FormMethod.Post, new { @id = "formid" }))
        {
            @Html.AntiForgeryToken()
        <div class="modal fade addworkflowdmodal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="calenderModalLabel">
            <div class="modal-dialog modal" style="vertical-align: middle; margin:0 auto 0 -15%; overflow-y:hidden; overflow-x:hidden; display:block; margin-top:50px" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title text-success" id="exampleModalLabel"><span class="glyphicon glyphicon-hand-down"></span> Add WorkFlow Record</h4>
                    </div>

                    <div class="modal-body">
                        <div class="form-horizontal">
                            <div class="row">
                                <div class="col-md-12">

                                    <div class="col-sm-6">
                                        <label>Application Type</label>
                                        <div class="form-group">
                                            <div class="col-sm-10">
                                                <input class="form-control" id="txtApplicationType" required name="txtApplicationType" type="text" />
                                            </div>
                                        </div>

                                        <label>Action</label>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <input type="text" id="txtAction" required name="txtAction" class="form-control" />
                                            </div>
                                        </div>

                                        <label>Action Role</label>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <input type="text" id="txtActionRole" required name="txtActionRole" class="form-control" />
                                            </div>
                                        </div>


                                        <label>Next StateID</label>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <input type="number" id="txtNextStateID" required name="txtNextStateID" class="form-control" />
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-sm-6">

                                        <label>Target Role</label>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <input type="text" id="txtTargetRole" required name="txtTargetRole" class="form-control" />
                                            </div>
                                        </div>

                                        <label>Current StageID</label>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <input type="number" id="txtCurrentStageID" required name="txtCurrentStageID" class="form-control" />
                                            </div>
                                        </div>


                                    </div>

                                </div>
                            </div>
                        </div>


                        <span style="margin-left:200px"> <button class="btn btn-success" id="workflowaddrecord" type="button"><span class="glyphicon glyphicon-plus-sign"></span> Add WorkFlow</button></span>

                    </div>

                </div>
            </div>
        </div>
        }






        <div class="modal fade updaterecordmodal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="calenderModalLabel">
            <div class="modal-dialog modal" style="vertical-align: middle; margin:0 auto 0 -15%; overflow-y:hidden; overflow-x:hidden; display:block; margin-top:50px" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title text-success" id="exampleModalLabel"><span class="glyphicon glyphicon-hand-down"></span> Update WorkFlow Record</h4>
                    </div>

                    <div class="modal-body">
                        <div class="form-horizontal">
                            <div class="row">
                                <div class="col-md-12">

                                    <div class="col-sm-6">
                                        <label>Application Type</label>
                                        <div class="form-group">
                                            <div class="col-sm-10">
                                                <input class="form-control" id="ApplicationType" name="ApplicationType" type="text" />
                                                <input id="WorkFlowId" name="WorkFlowId" type="hidden" />
                                            </div>
                                        </div>

                                        <label>Action</label>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <input type="text" id="Action" name="Action" class="form-control" />
                                            </div>
                                        </div>

                                        <label>Action Role</label>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <input type="text" id="ActionRole" name="ActionRole" class="form-control" />
                                            </div>
                                        </div>


                                        <label>Next StateID</label>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <input type="number" id="NextStateID" name="NextStateID" class="form-control" />
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-sm-6">

                                        <label>Target Role</label>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <input type="text" id="TargetRole" name="TargetRole" class="form-control" />
                                            </div>
                                        </div>

                                        <label>Current StageID</label>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <input type="number" id="CurrentStageID" name="CurrentStageID" class="form-control" />
                                            </div>
                                        </div>

                                        <div><label class="control-label">Notify Action</label></div>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <input type="text" id="NotifyAction" name="NotifyAction" value="NONE" class="form-control" />

                                            </div>
                                        </div>


                                    </div>

                                </div>
                            </div>
                        </div>


                        <span style="margin-left:200px"> <button class="btn btn-success" id="workflowupdaterecord"><span class="glyphicon glyphicon-save"></span> Update Record</button></span>

                    </div>

                </div>
            </div>
        </div>





        <div class="row">
            <div class="col-md-12" style="background-color:white">

                <fieldset class="scheduler-border">
                    <legend class="scheduler-border">WorkFlow Information</legend>
                    <button class="btn btn-xs btn-info" style="float:right" data-toggle="modal" data-target=".addworkflowdmodal"><span class="glyphicon glyphicon-plus"></span> Add WorkFlow</button>
                    <br />
                    <table class="table table-striped table-condensed table-responsive table-bordered customDT" id="mytable">
                        <thead>
                            <tr>
                                <th><strong>Application Type</strong>
                                <th><strong>Action</strong> </th>
                                <th><strong>Action Role</strong></th>
                                <th><strong>Current StageID</strong></th>
                                <th><strong>Next StateID</strong></th>
                                <th><strong>Target Role</strong></th>
                                <th><strong>Notify Action</strong></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (LPGRetailerLicense.DbEntities.WorkFlowNavigation n in Model)
                            {
                                <tr>
                                    <td>@n.ApplicationType</td>
                                    <td>@n.Action</td>
                                    <td>@n.ActionRole</td>
                                    <td>@n.CurrentStageID</td>
                                    <td>@n.NextStateID</td>
                                    <td>@n.TargetRole</td>
                                    <td>@n.NotifyAction</td>
                                    <td><button class="btn btn-success btn-xs" onclick="WorkFlowJs('@n.WorkFlowId', '@n.ApplicationType', '@n.Action', '@n.ActionRole', '@n.CurrentStageID', '@n.NextStateID', '@n.TargetRole', '@n.NotifyAction')" id="updatebtn"><span class="glyphicon glyphicon-eye-open"></span> Update</button></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </fieldset>
            </div>
        </div>

        <div style="display:none" class="loadingImage">
            <div id="load" style="width: 100%; height: 100%; top:0; left:0; position:fixed; display:block; opacity:0.7; background-color:#fff; z-index:99; text-align:center">
                <img id="loading-image" style="position:absolute; top:100px; left:50%; z-index:100" src="~/Images/spinning.gif" />
            </div>
        </div>

        <div id="modalMapDialog" style="display: none">
            <div id="MapContainer" style="height: 430px; width: 100%;border: 5px solid green;"></div>
        </div>

    </div>




    @section scripts{
        <script src="@Url.Content("~/Scripts/jquery.ui.widget.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.iframe-transport.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/select2.min.js")" type="text/javascript"></script>
        <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC2df9i_A809q2eQQizBb7UqSGXASsQHVQ&libraries=places"></script>
        <script src="@Url.Content("~/Scripts/jquery-ui.min.js")" type="text/javascript"></script>
        <link href="@Url.Content("~/Content/jquery-ui.css")" rel="stylesheet" />
        <script type="text/javascript">



            google.maps.event.addDomListener(window, 'load', function () {
                var options = {
                    componentRestrictions: { country: "ng" }
                };
                var places = new google.maps.places.Autocomplete(document.getElementById('Facaddress'), options);
                google.maps.event.addListener(places, 'place_changed', function () {
                    var place = places.getPlace();
                    var address = place.formatted_address;
                    var latitude = place.geometry.location.lat();
                    var longitude = place.geometry.location.lng();
                    var mesg = "Location Address Is : " + address;
                    mesg += "\nLocation Latitude Is : " + latitude;
                    mesg += "\nLocation Longitude Is: " + longitude;
                    showMap(address, latitude, longitude);
                });
            });


            function showMap(locationaddress, latitude, longitude) {
                var markers = [];

                $("#modalMapDialog").dialog({
                    modal: true,
                    title: "Address Location on Map",
                    width: 550,
                    hright: 400,
                    buttons: {
                        Close: function () {
                            $(this).dialog('close');
                        },
                        Okay: function () {
                            $("#Gps").val(latitude + ',' + longitude);
                            $(this).dialog('close');
                        }
                    },
                    open: function () {

                        google.maps.visualRefresh = true;
                        var myCenter = new google.maps.LatLng(latitude, longitude);
                        var mapCanvas = document.getElementById("MapContainer");
                        var mapOptions = {
                            center: myCenter,
                            zoom: 14,
                            mapTypeId: google.maps.MapTypeId.ROADMAP,
                            panControl: true,
                            zoomControl: true,
                            mapTypeControl: true,
                            scaleControl: true,
                            streetViewControl: true,
                            overviewMapControl: true,
                            rotateControl: true,
                            zoomControl: true,
                            zoomControlOptions: {
                                style: google.maps.ZoomControlStyle.SMALL
                            },
                            mapTypeControl: true,
                            mapTypeControlOptions: {
                                style: google.maps.MapTypeControlStyle.DROPDOWN_MENU,
                                position: google.maps.ControlPosition.TOP_CENTER,
                                mapTypeIds: [
                                    google.maps.MapTypeId.ROADMAP,
                                    google.maps.MapTypeId.TERRAIN,
                                    google.maps.MapTypeId.SATELLITE,
                                    google.maps.MapTypeId.HYBRID
                                ]
                            }
                        };

                        var map = new google.maps.Map(mapCanvas, mapOptions);
                        var marker = new google.maps.Marker({ position: myCenter, animation: google.maps.Animation.BOUNCE });
                        marker.setMap(map);

                        var infowindow = new google.maps.InfoWindow({
                            content: locationaddress
                        });
                        infowindow.open(map, marker);

                        // Zoom to 9 when clicking on marker
                        google.maps.event.addListener(marker, 'click', function () {
                            map.setZoom(13);
                            map.setCenter(marker.getPosition());
                        });
                    }
                });
            }


            $(function () {








                $("#workflowupdaterecord").click(function () {
                    var msg = confirm("Are you sure you want to update this record?");
                    $(".updaterecordmodal").modal("hide");
                    debugger;
                    var workFlowId = $("#WorkFlowId").val();
                    var ApplicationType = $("#ApplicationType").val();
                    var Action = $("#Action").val();
                    var ActionRole = $("#ActionRole").val();
                    var currentStageID = $("#CurrentStageID").val();
                    var nextStateID = $("#NextStateID").val();
                    var TargetRole = $("#TargetRole").val();
                    var NotifyAction = $("#NotifyAction").val();

                    if (msg === true) {
                        $(".loadingImage").show('fast');
                        $.post("/Admin/UpdateWorkFlowRecord", { WorkFlowId: workFlowId, "ApplicationType": ApplicationType, "Action": Action, "ActionRole": ActionRole, CurrentStageID: currentStageID, NextStateID: nextStateID, "TargetRole": TargetRole, "NotifyAction": NotifyAction }, function (res) {
                            if (res === "success") {
                                alert("Update was successful");


                                $(".updaterecordmodal").modal("hide");
                                $(".loadingImage").hide('fast');
                            }
                            else {
                                alert("Something went wrong");
                                $(".loadingImage").hide('fast');
                            }
                        });
                        $(".loadingImage").hide('fast');
                    }
                    else {
                        return false;
                    }


                });



                $("#workflowaddrecord").click(function () {
                    if ($("#formid").valid()) {
                        var msg = confirm("Are you sure you want to Add this record?");
                        var ApplicationType = $("#txtApplicationType").val();
                        var Action = $("#txtAction").val();
                        var ActionRole = $("#txtActionRole").val();
                        var currentStageID = $("#txtCurrentStageID").val();
                        var nextStateID = $("#txtNextStateID").val();
                        var TargetRole = $("#txtTargetRole").val();
                        var NotifyAction = $("#txtNotifyAction").val();


                        if (msg === true) {
                            $(".loadingImage").show('fast');
                            $.post("/Admin/AddWorkFlowRecord", { "ApplicationType": ApplicationType, "Action": Action, "ActionRole": ActionRole, CurrentStageID: currentStageID, NextStateID: nextStateID, "TargetRole": TargetRole, "NotifyAction": NotifyAction }, function (res) {
                                if (res === "success") {
                                    alert("New record was successful");


                                    $(".updaterecordmodal").modal("hide");
                                    $(".loadingImage").hide('fast');
                                }
                                else {
                                    alert("Something went wrong");
                                    $(".loadingImage").hide('fast');
                                }
                            });
                            $(".loadingImage").hide('fast');
                        }
                        else {
                            return false;
                        }

                    }

                });










                $("#mytable").dataTable({
                    "aLengthMenu": [10, 25, 50, 75, 100, 200],
                    'iDisplayLength': 10,
                    columnDefs: [{ orderable: false, "targets": [0, -1] }],
                    "language": {
                        "lengthMenu": "Display  _MENU_ records",
                        "zeroRecords": "No record found",
                        "info": "Showing page _PAGE_ of _PAGES_",
                        "infoEmpty": "No Record to Display Currently",
                        "infoFiltered": "(filtered from _MAX_ total records)"
                    },
                    "order": [[1, "desc"]]
                });
            });

            function WorkFlowJs(WorkFlowId, ApplicationType, Action, ActionRole, CurrentStageID, NextStateID, TargetRole, NotifyAction) {
                debugger;
                $(".loadingImage").show('fast');
                $("#WorkFlowId").val(WorkFlowId);
                $("#ApplicationType").val(ApplicationType);
                $("#Action").val(Action);
                $("#ActionRole").val(ActionRole);
                $("#CurrentStageID").val(CurrentStageID);
                $("#NextStateID").val(NextStateID);
                $("#TargetRole").val(TargetRole);
                $("#NotifyAction").val(NotifyAction);
                $(".updaterecordmodal").modal('show');
                $(".loadingImage").hide('fast');
            };





        </script>
    }


