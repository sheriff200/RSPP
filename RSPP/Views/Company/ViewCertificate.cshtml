@model IEnumerable<RSPP.Models.PermitModels>

@{
    ViewBag.Title = "View LTO";
    Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>


    <style type="text/css">
    </style>
</head>
<body>
    <div style="width: 1240px; height: 1810px; margin: 0px auto;box-sizing: border-box; padding: 0px; position: relative;">
        <div style="width: 100%; text-align: center; position: absolute; top: 50%; margin-top: -400px;">
            <img src="~/images/newnscwatermark.png" style="width: 820px; width: 920px;" />
        </div>
        <div style="border: 10px solid #101010; padding: 50px 67px; font-family: 'Times New Roman'; position: relative; height: 100%; box-sizing: border-box;">
            <table style="width:65%">
                <tbody>
                    <tr>
                        <td>
                            <div style="font-size:1.7em">Reg. No: @Model.FirstOrDefault().permitmodels.FirstOrDefault().LicenseNumber</div>
                        </td>
                        <td>
                            <img src="~/images/logoshippers.bmp" style="width:270px; height:250px; margin-top:15px; margin-bottom:7px;" />
                        </td>
                    </tr>
                </tbody>
            </table>

            <div style="text-align: center">
                <h2 style="margin: 0; margin-top:10px;font-size: 3.0em; color:#255f0c; font-family:Calibri">NIGERIAN SHIPPERS' COUNCIL</h2>
                <h2 style="margin: 0; margin-top:5px;font-size: 1.6em; font-family:Cambria">REGISTRATION OF PORT REGULATED SERVICE PROVIDERS AND USERS</h2><br />
                <br />


                <table style="width:70%; margin-left:25%">
                    <tbody>
                        <tr>
                            <td style="font-size:2.9em; font-family:Old English Text MT;">Registration Certificate</td>

                            <td style="margin-right:10%">
                                <img style="height:150px" src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model.FirstOrDefault().permitmodels.FirstOrDefault().QrCode))" />
                            </td>
                        </tr>
                    </tbody>
                </table>


                <br />
            </div>



            <div style="text-align: center; font-size:2.5em">
                I hereby certify that
            </div><br /><br />



            <div style=" border-bottom: 2px dotted #888;padding: 5px 0 0; font-size:2em; text-align: center;" colspan="3">
                <div style="display: inline-block; margin-bottom:-3px; background-color:#fff; padding: 5px 10px 5px 0;">
                </div><span style="font-weight: bold; text-align:center">@Model.FirstOrDefault().permitmodels.FirstOrDefault().CompanyName</span>

            </div>
            <div style="text-align: center; font-size:2em">
                COMPANY/AGENCY/ORGANISATION
            </div><br /><br />


            <div style="font-size: 2.5em; text-align: center">
                is registered with the Nigerian Shippers' Council
            </div><br /><br />




            <table style="width: 100%; border-spacing: 0; position: relative; margin-top: 0px; font-size:2.5em">
                <tr>
                    <td style=" padding: 5px 0 0; border-bottom: 2px dotted #888;">
                        <div style="display: inline-block; margin-bottom: -3px; background-color:#fff; padding: 5px 10px 5px 0;">
                            this
                        </div>
                        <b style="font-weight: bold">@Model.FirstOrDefault().permitmodels.FirstOrDefault().IssuedDay</b>
                    </td>
                    <td style=" padding: 5px 0 0; border-bottom:2px dotted #888;">
                        <div style="display: inline-block; margin-bottom: -3px; background-color:#fff; padding: 5px 10px 5px 0;">
                            &nbsp; &nbsp; day of
                        </div>
                        <b style="font-weight: bold">@Model.FirstOrDefault().permitmodels.FirstOrDefault().IssuedMonth</b>
                    </td>
                    <td style=" padding: 5px 0 0; border-bottom:2px dotted #888;">
                        <span style="display: inline-block; margin-bottom: -3px; background-color:#fff; padding:5px 10px 5px 0; margin-right:90px">
                            Year
                        </span>
                        <b style="font-weight: bold">@Model.FirstOrDefault().permitmodels.FirstOrDefault().IssuedYear</b>
                    </td>
                </tr>

            </table>


            <br />
            <div style="text-align: center; font-size:2.5em">
                as
            </div><br />



            <div style=" border-bottom: 2px dotted #888;padding: 5px 0 0; font-size:2em; text-align: center;" colspan="3">
                <div style="display: inline-block; margin-bottom:-3px; background-color:#fff; padding: 5px 10px 5px 0;">
                </div><span style="font-weight: bold; text-align:center">@Model.FirstOrDefault().permitmodels.FirstOrDefault().AgencyName</span>

            </div>
            <div style="text-align: center; font-size:2.5em">
                Category
            </div><br /><br />



            <table style="width: 100%; border-spacing: 0; position: relative; margin-top: 0px; font-size:2em">
                <tr>
                    <td style=" padding: 5px 0 0; border-bottom: 2px dotted #888;">
                        <div style="display: inline-block; margin-bottom: -3px; background-color:#fff; padding: 5px 10px 5px 0;">
                            Issued on the
                        </div>
                        <b style="font-weight: bold;">@Model.FirstOrDefault().permitmodels.FirstOrDefault().IssuedDay</b>
                    </td>
                    <td style=" padding: 5px 0 0; border-bottom:2px dotted #888;">
                        <div style="display: inline-block; margin-bottom: -3px; background-color:#fff; padding: 5px 10px 5px 0;">
                            &nbsp; &nbsp; Day of
                        </div>
                        <b style="font-weight: bold;">@Model.FirstOrDefault().permitmodels.FirstOrDefault().IssuedMonth</b>
                    </td>
                    <td style=" padding: 5px 0 0; border-bottom:2px dotted #888;">
                        <span style="display: inline-block; margin-bottom: -3px; background-color:#fff; padding:5px 10px 5px 0; margin-right:90px">
                            Year
                        </span>
                        <b style="font-weight: bold;">@Model.FirstOrDefault().permitmodels.FirstOrDefault().IssuedYear </b>
                    </td>
                    <td>and valid</td>

                </tr>

                <tr>
                    <td style=" padding: 5px 0 0; border-bottom: 2px dotted #888;">
                        <div style="display: inline-block; margin-bottom: -3px; background-color:#fff; padding: 5px 10px 5px 0;">
                            Until the
                        </div>
                        <b style="font-weight: bold;">@Model.FirstOrDefault().permitmodels.FirstOrDefault().ExpiryDay</b>
                    </td>
                    <td style=" padding: 5px 0 0; border-bottom:2px dotted #888;">
                        <div style="display: inline-block; margin-bottom: -3px; background-color:#fff; padding: 5px 10px 5px 0;">
                            &nbsp; &nbsp; Day of
                        </div>
                        <b style="font-weight: bold;">@Model.FirstOrDefault().permitmodels.FirstOrDefault().ExpiryMonth</b>
                    </td>
                    <td style=" padding: 5px 0 0; border-bottom:2px dotted #888;">
                        <span style="display: inline-block; margin-bottom: -3px; background-color:#fff; padding:5px 10px 5px 0; margin-right:90px">
                            Year
                        </span>
                        <b style="font-weight: bold;">@Model.FirstOrDefault().permitmodels.FirstOrDefault().ExpiryYear</b>
                    </td>
                </tr>

            </table><br /><br />

            <table style="text-align: center; font-size:2.5em; width:65%">
                <tbody style="text-align: center">
                    <tr style="text-align: center">
                        <td colspan="2"></td>
                        <td style="width:300px">
                            <div style=" border-bottom: 2px dotted #888;padding: 5px 0 0; text-align: center">

                                <img src="@Url.Content(Model.FirstOrDefault().permitmodels.FirstOrDefault().Signature)" style="height: 125px;" />

                            </div>
                            <div>

                                <b> REGISTRAR</b><br />
                                @*<div><img src="~/images/coa.png" style="width:100px; height:100px" /></div>*@
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>



        </div>
    </div>
</body>
</html>

